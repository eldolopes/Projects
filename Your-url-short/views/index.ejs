<%- include ('partials/header.ejs')  %> 
<body>
  <div class="container">
    <h1>Go! Short Url</h1>
    <form class="my-4 form-inline" action="/shortUrls" method="POST" >
      <label class="sr-only" for="fullUrl">Url</label>
      <input class="form-control col mr-2" type="url" name="fullUrl" id="fullUrl" required placeholder="Your Url Here!">
      <button class="btn btn-success" type="submit">Let's GO!</button>
    </form>
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Your URL</th>
          <th>Go! Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
    
          <tr>
            <td><a href="http://fuuuuuuuuuuuuuuuuuuuuuuuuuuullurl">Full URL</a></td>
            <td><a href="http://shorturl">Short URL</a></td>
            <td>0</td>
          </tr>
        
      </tbody>
    </table>
  </div>
</body>
</html>